#!/usr/bin/perl

use warnings;
use strict;

use FindBin;
use lib "$FindBin::Bin/../lib/superglue/perl5";

use ScriptDie;
use Superglue;

my $javascript = "$Superglue::lib/superglue-janet.js";

my %opt = Superglue::getopt;

my @loglevel;
$loglevel[0] = '--log-level=info' if $opt{verbose};
$loglevel[0] = '--log-level=debug' if $opt{debug};

my @notreally;
$notreally[0] = '--not-really' if $opt{'not-really'};

my @args = ($Superglue::CasperJS, @loglevel, $javascript,
	    @notreally, "--creds=$opt{creds}", $opt{zone});

debug "exec @args";

exec @args
    or edie "exec @args";

__END__

=head1 NAME

superglue-janet - synchronize DNS delegation with JANET

=head1 SYNOPSIS

B<superglue-janet> [B<--debug>|B<-d>] [B<--verbose>|B<-v>]
    [B<--not-really>|B<-n>] B<--creds>=I<file>|B<-c>I<file> I<domain>

B<superglue-janet> B<-h>|B<--help>

=head1 DESCRIPTION

